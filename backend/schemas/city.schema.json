{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "_id": { "type": "string" },
    "countryId": { "type": "string" },
    "name": { "type": "string" },
    "zipCode": { "type": "number" },
    "coordinates": {
      "type": ["string", "null"],
      "pattern": "^(-?\\d+(\\.\\d+)?),\\s*(-?\\d+(\\.\\d+)?)$"
    }
  },
  "required": ["countryId", "name", "zipCode"]
}
